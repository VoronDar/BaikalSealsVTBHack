<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VTB" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>




        <item name="edit_text_color">?attr/text_color</item>
        <item name="text_view_color">?attr/text_color</item>
        <item name="text_field_stroke_color">?attr/main_color</item>
        <item name="text_field_stroke_error_color">?attr/error_color</item>
        <item name="edit_text_error_color">?attr/error_color</item>



        <item name="main_button_back_color">?attr/main_color</item>
        <item name="second_button_back_color">?attr/main_color</item>
        <item name="main_button_text_color">@color/white</item>
        <item name="second_button_text_color">?attr/main_color</item>
        <item name="second_button_ripple_color">?attr/ripple_color</item>
        <item name="main_button_ripple_color">?attr/ripple_color</item>
        <item name="back_color">?attr/background_color</item>
        <item name="text_size">18dp</item>
        <item name="highlight_text_size">22dp</item>
        <item name="highLight_color">@color/main_color</item>
        <item name="checkbox_color">?attr/main_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="card_stroke_color">@color/hint_color</item>


        <item name="main_color">@color/main_color</item>
        <item name="background_color">@color/background</item>
        <item name="ripple_color">@color/main_color</item>
        <item name="text_color">@color/text_color</item>
        <item name="hint_color">@color/hint_color</item>
        <item name="icon_color">@color/icon</item>
        <item name="error_color">@color/error_color</item>

    </style>


    <style name="Theme.VTB.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HighLightText">
        <item name = "android:textSize">?attr/highlight_text_size</item>
        <item name = "android:textColor">?attr/highLight_color</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name = "android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name = "android:gravity">center</item>>
        <item name = "android:layout_gravity">center</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
    </style>


    <style name="filterText">
        <item name = "android:fontFamily">@font/regular</item>
        <item name = "android:textSize">?attr/small_text_size</item>
        <item name = "android:textColor">?attr/filter_text_color</item>
        <item name = "android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
        <item name = "android:gravity">left</item>>
        <item name = "android:layout_gravity">center_vertical|left</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name ="android:layout_alignParentLeft">true</item>
        <item name ="android:layout_alignParentTop">true</item>
        <item name ="android:text">Фильтр</item>
    </style>


    <style name="filterEditText" parent="filterText">
        <item name="android:minWidth">150dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">?attr/filter_back_color</item>
        <item name="android:hint">Поиск</item>
        <item name="android:textColorHint">?hint_color</item>
    </style>

    <style name="filterIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src"></item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>


    <style name="ImportantText">
        <item name = "android:fontFamily">@font/medium</item>
        <item name = "android:textSize">?attr/text_size</item>
        <item name = "android:textColor">?attr/important_text_color</item>
        <item name = "android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
        <item name = "android:gravity">left</item>>
        <item name = "android:layout_gravity">center_vertical|left</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name ="android:layout_alignParentLeft">true</item>
        <item name ="android:layout_alignParentTop">true</item>
    </style>



    <style name="littleText">
        <item name = "android:fontFamily">thin</item>
        <item name = "android:textSize">?attr/small_text_size</item>
        <item name = "android:textColor">?attr/text_view_color</item>
        <item name = "android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
        <item name = "android:gravity">left</item>>
        <item name = "android:layout_gravity">center_vertical|left</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name ="android:layout_alignParentLeft">true</item>
        <item name ="android:layout_alignParentTop">true</item>
        <item name ="android:text">Фильтр</item>
    </style>



    <style name="textButton">
        <item name = "android:fontFamily">@font/regular</item>
        <item name = "android:textSize">?attr/text_size</item>
        <item name = "android:textColor">?attr/text_button_text_color</item>
        <item name = "android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">@dimen/button_padding_width</item>
        <item name="android:paddingRight">@dimen/button_padding_width</item>
        <item name="android:paddingTop">@dimen/button_padding_height</item>
        <item name="android:paddingBottom">@dimen/button_padding_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name ="android:layout_alignParentLeft">true</item>
        <item name ="android:layout_alignParentTop">true</item>
    </style>


    <style name="mainButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">?attr/main_button_text_color</item>
        <item name="android:gravity">center</item>
        <item name = "android:backgroundTint" tools:targetApi="lollipop">?attr/main_button_back_color</item>
        <item name = "backgroundTint">?attr/main_button_back_color</item>
        <item name="rippleColor">?attr/main_button_ripple_color</item>
        <item name = "cornerRadius">@dimen/button_corner</item>
        <item name="android:textAllCaps">false</item>
        <item name = "android:layout_gravity">center</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/button_elevation</item>
        <item name="android:paddingLeft">@dimen/button_padding_width</item>
        <item name="android:paddingRight">@dimen/button_padding_width</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:paddingTop">@dimen/button_padding_height</item>
        <item name="android:paddingBottom">@dimen/button_padding_height</item>
    </style>

    <style name="secondButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">?attr/second_button_text_color</item>
        <item name="android:gravity">center</item>
        <item name = "cornerRadius">@dimen/button_corner</item>
        <item name="android:textAllCaps">false</item>
        <item name = "backgroundTint">?attr/background_color</item>
        <item name = "strokeWidth">@dimen/stroke_width</item>>
        <item name = "strokeColor">?attr/second_button_back_color</item>
        <item name="android:paddingLeft">@dimen/button_padding_width</item>
        <item name="android:paddingRight">@dimen/button_padding_width</item>
        <item name="rippleColor">?attr/second_button_ripple_color</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:paddingTop">@dimen/button_padding_height</item>
        <item name="android:paddingBottom">@dimen/button_padding_height</item>
    </style>


    <style name="card">
        <item name = "cornerRadius">@dimen/card_corner_radius</item>
        <item name = "strokeWidth">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name= "rippleColor">?attr/second_button_ripple_color</item>
        <item name="android:elevation" tools:targetApi="lollipop">12dp</item>
        <item name = "strokeColor">?attr/card_stroke_color</item>
    </style>


    <style name="filterCard">
        <item name = "cornerRadius">10dp</item>
        <item name = "strokeWidth">@dimen/stroke_width</item>
        <item name="contentPadding">@dimen/text_field_content_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name = "strokeColor">?text_field_stroke_color</item>
    </style>


    <style name="divider">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divider_color</item>
    </style>


    <style name = "cardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/card_content_padding</item>
    </style>


    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/design_default_color_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name = "textField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">?attr/edit_text_color</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
        <item name="boxStrokeColor">?attr/text_field_stroke_color</item>
        <item name="boxStrokeWidth">@dimen/stroke_width</item>
        <item name="hintTextColor">?attr/hint_color</item>
        <item name="android:textColorHint">?attr/hint_color</item>

        <item name="hintTextAppearance">@style/TextAppearance.App.TextInputLayout</item>

    </style>

    <style name="text">
        <item name = "android:fontFamily">@font/regular</item>
        <item name = "android:textSize">@dimen/text_size</item>
        <item name = "android:textColor">?attr/text_view_color</item>
        <item name = "android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
        <item name = "android:gravity">left</item>>
        <item name = "android:layout_gravity">center_vertical|left</item>
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name ="android:layout_alignParentLeft">true</item>
        <item name ="android:layout_alignParentTop">true</item>
    </style>

    <style name="important_text" parent="text">
        <item name = "android:fontFamily">@font/regular</item>
    </style>


    <style name="editText" parent="text">
        <item name="hintTextColor">?attr/hint_color</item>
    </style>

    <!-- units for form-->

    <style name="form_unit_text" parent = "@style/text">
        <item name = "android:textSize">@dimen/important_text_size</item>
        <item name="android:id">@id/text</item>
        <item name="android:paddingTop">@dimen/form_align</item>
    </style>

    <style name="form_unit_error_message" parent = "@style/text">
        <item name = "android:textSize">@dimen/important_text_size</item>
        <item name="android:id">@id/error</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textColor">?attr/edit_text_error_color</item>
        <item name="android:paddingTop">@dimen/form_align</item>
    </style>

    <style name="form_unit_error_submessage" parent = "@style/form_unit_error_message">
        <item name = "android:textSize">@dimen/small_text_size</item>
        <item name="android:paddingTop">@dimen/form_sub_align</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="form_unit_text_field" parent = "@style/textField">
        <item name="android:id">@id/textField</item>
        <item name="android:paddingTop">@dimen/form_align</item>
    </style>

    <style name="form_unit_edit_text" parent = "@style/editText">
        <item name="android:id">@id/text</item>
    </style>

    <style name="form_unit_checkbox">
        <item name="android:id">@id/checkbox</item>
        <item name="android:layout_width">@dimen/icon_unit_size</item>
        <item name="android:layout_height">@dimen/icon_unit_size</item>
        <item name="android:padding">@dimen/icon_padding</item>
        <item name="android:buttonTint" tools:targetApi="lollipop">?attr/checkbox_color</item>
        <item name="buttonTint">?attr/checkbox_color</item>
    </style>


    <style name="item_unit_image">
        <item name="android:id">@id/image</item>
        <item name="android:layout_width">@dimen/image_unit_size</item>
        <item name="android:layout_height">@dimen/image_unit_size</item>
    </style>

    <style name="item_unit_icon">
        <item name="android:id">@id/image</item>
        <item name="android:layout_width">@dimen/icon_unit_size</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_height">@dimen/icon_unit_size</item>
        <item name="android:padding">@dimen/icon_padding</item>
    </style>

</resources>