<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView style="@style/card"
    android:layout_width="match_parent"
    app:strokeWidth="1dp"
    android:id = "@+id/opened"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding = "@dimen/card_content_padding"
        >

        <TextView
            android:id = "@+id/text"
            style="@style/important_text"
            android:text = "Золото"
            android:textSize="22dp"
            android:layout_weight="1"
            android:fontFamily="@font/medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id = "@+id/description"
            style="@style/text"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text = "Ну, это золото. Я понятия не имею, какое описание ему нужно, так что вот. Кстати, оно красивое."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id = "@+id/comments"
            android:layout_marginTop="20dp"
            >
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
        <Button
            android:id = "@+id/buy"
            style="@style/mainButton"
            android:layout_width="0dp"
            android:paddingLeft = "10dp"
            android:paddingRight = "10dp"
            android:layout_weight="1"
            android:text = "Купить"
            />
            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id = "@+id/send"
                android:layout_marginTop="20dp"
                style="@style/secondButton"
                android:paddingLeft = "10dp"
                android:paddingRight = "10dp"
                android:layout_margin="0dp"
                android:layout_width="0dp"
                android:visibility = "gone"
                android:layout_weight="1"
                android:text = "Продать"
                />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>